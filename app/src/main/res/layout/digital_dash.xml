<!-- res/layout/digital_dash.xml -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <!-- Add a FrameLayout to hold your draggable gauges -->
    <FrameLayout
        android:id="@+id/gaugeContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <!-- You will programmatically add your gauges to this container -->
    </FrameLayout>

    <!-- Add your pop-out bar for gauge selection here -->

    <!-- Add your hamburger menu button here -->

    <!-- This is where we are going to add the gauges for temp and rpm and stuff like that -->
    <LinearLayout
        android:id="@+id/row1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <com.example.racestats.DraggableGaugeView
            android:id="@+id/rpmGauge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Engine RPM: "
            android:textSize="18sp"
            android:visibility="visible" />

        <com.example.racestats.DraggableGaugeView
            android:id="@+id/coolantTempGauge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Coolant Temperature CÂ°: "
            android:textSize="18sp"
            android:visibility="visible" />
    </LinearLayout>

    <!-- Other UI elements as needed -->

</LinearLayout>
