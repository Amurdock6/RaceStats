<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Centered title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Maintenance Records"
            android:textColor="@color/white"
            android:textSize="42sp"
            android:layout_marginTop="10dp"
            android:textStyle="bold" />

        <!-- Three columns for service, mileage, and date -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Service Done"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="22sp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Mileage"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="22sp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Date Completed"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="22sp"/>
        </LinearLayout>

        <!-- Placeholder for service records data, to be populated programmatically -->
        <LinearLayout
            android:id="@+id/service_records_list"
            android:layout_width="match_parent"
            android:layout_height="386dp"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Dummy TextView to ensure the layout takes up the full height of the screen -->
            <TextView
                android:layout_width="991dp"
                android:layout_height="320dp"
                android:visibility="invisible" />

        </LinearLayout>

        <!-- Buttons to save, edit, and add new records -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:layout_marginHorizontal="40dp"
            >

            <Button
                android:id="@+id/save_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Save"
                android:textSize="22sp" />

            <Button
                android:id="@+id/edit_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit"
                android:textSize="22sp"
                android:layout_marginHorizontal="50dp"
                android:layout_weight="1" />

            <Button
                android:id="@+id/add_new_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add New"
                android:textSize="22sp"
                android:layout_weight="1" />
        </LinearLayout>

    </LinearLayout>

</ScrollView>