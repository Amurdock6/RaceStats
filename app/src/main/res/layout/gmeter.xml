<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageButton
        android:id="@+id/backArrow"
        android:layout_width="60dp"
        android:layout_height="48dp"
        android:layout_gravity="start"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:background="?android:attr/selectableItemBackground"
        android:baselineAlignBottom="false"
        android:src="@drawable/home_icon"
        tools:ignore="SpeakableTextPresentCheck" />

    <com.example.racestats.GeForceView
        android:id="@+id/geForceView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <Button
        android:id="@+id/calibrateButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:text="Calibrate" />

    <Button
        android:id="@+id/logbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:text="Log" />

    <!-- TextViews for Forces -->
    <TextView
        android:id="@+id/leftForceTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Left Force: 0 G"
        android:textColor="@android:color/white"
        android:layout_below="@id/calibrateButton"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"/>

    <TextView
        android:id="@+id/rightForceTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Right Force: 0 G"
        android:textColor="@android:color/white"
        android:layout_below="@id/leftForceTextView"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"/>

    <TextView
        android:id="@+id/brakingForceTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Braking Force: 0 G"
        android:textColor="@android:color/white"
        android:layout_below="@id/rightForceTextView"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"/>

    <TextView
        android:id="@+id/accelerationForceTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Acceleration Force: 0 G"
        android:textColor="@android:color/white"
        android:layout_below="@id/brakingForceTextView"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"/>

    <TextView
        android:id="@+id/maxGForceTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/calibrateButton"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="88dp"
        android:layout_marginEnd="26dp"
        android:text="Max G-Force: 0 G"
        android:textColor="@android:color/white" />

</RelativeLayout>
