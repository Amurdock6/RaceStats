<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Coolant logo on the left -->
    <ImageView
        android:id="@+id/coolantLogo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="8dp"
        android:src="@drawable/coolant_logo" />

    <!-- Horizontal gauge ProgressBar -->
    <ProgressBar
        android:id="@+id/coolantTemperatureGauge"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="1560dp"
        android:layout_height="55dp"
        android:layout_toEndOf="@id/coolantLogo"
        android:max="126"
        android:progress="0"
        android:progressDrawable="@drawable/horizontal_gauge" />

    <!-- Black line separator -->
    <View
        android:id="@+id/separator"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#000000"
        android:layout_below="@id/coolantTemperatureGauge" />

    <!-- Important temperature markers -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_below="@id/separator"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">

        <!-- Coolant temperature text on the right -->
        <TextView
            android:id="@+id/coolantTemperatureText"
            android:layout_width="1620dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="0Â°C"
            android:textColor="@color/black"
            android:textSize="30sp" />

    </LinearLayout>
</RelativeLayout>